<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:id="@+id/dark_theme_checkbox"
        android:key="dark_theme_checkbox"
        android:title="@string/pref_dark_theme" />
    <ListPreference
        android:defaultValue="2"
        android:entries="@array/columns_amount_potrait"
        android:entryValues="@array/columns_amount_potrait"
        android:key="columns_amount_potrait"
        android:title="@string/ColumnsAmountPotrait" />

    <ListPreference
        android:defaultValue="5"
        android:entries="@array/columns_amount_landscape"
        android:entryValues="@array/columns_amount_landscape"
        android:key="columns_amount_landscape"
        android:title="@string/ColumnsAmountLandscape" />
</PreferenceScreen>