<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="titleColor">@color/white</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/dark_grey_navbar</item>
        <item name="android:itemBackground">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenuDark</item>
        <item name="popupMenuStyle">@style/PopupMenuDark</item>
        <item name="colorAccent">@color/dark_grey</item>
        <item name="backgroundColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="titleColor">@color/white</item>



    </style>


    <style name="PopupMenuDark" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@color/black</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="titleColor">@color/white</item>
    </style>

    <style name="acStyle" parent="AppThemeLight">
        <item name="colorPrimary">@color/acColorPrimary</item>
        <item name="colorPrimaryDark">@color/acColorPrimaryDark</item>
        <item name="colorAccent">@color/acColorPrimary</item>
    </style>

    <style name="blindsStyle" parent="AppThemeLight">
        <item name="colorPrimary">@color/blindsColorPrimary</item>
        <item name="colorPrimaryDark">@color/blindsColorPrimaryDark</item>
        <item name="colorAccent">@color/blindsColorPrimary</item>

    </style>
    <style name="doorStyle" parent="AppThemeLight">
        <item name="colorPrimary">@color/doorColorPrimary</item>
        <item name="colorPrimaryDark">@color/doorColorPrimaryDark</item>
        <item name="colorAccent">@color/doorColorPrimary</item>
    </style>
    <style name="lampStyle" parent="AppThemeLight">
        <item name="colorPrimary">@color/lampColorPrimary</item>
        <item name="colorPrimaryDark">@color/lampColorPrimaryDark</item>
        <item name="colorAccent">@color/lampColorPrimary</item>
    </style>
    <style name="ovenStyle" parent="AppThemeLight">
        <item name="colorPrimary">@color/ovenColorPrimary</item>
        <item name="colorPrimaryDark">@color/ovenColorPrimaryDark</item>
        <item name="colorAccent">@color/ovenColorPrimary</item>
    </style>
    <style name="refrigeratorStyle" parent="AppThemeLight">
        <item name="colorPrimary">@color/refrigeratorColorPrimary</item>
        <item name="colorPrimaryDark">@color/refrigeratorColorPrimaryDark</item>
        <item name="colorAccent">@color/refrigeratorColorPrimary</item>
    </style>
    <style name="alarmStyle" parent="AppThemeLight">
        <item name="colorPrimary">@color/alarmColorPrimary</item>
        <item name="colorPrimaryDark">@color/alarmColorPrimaryDark</item>
        <item name="colorAccent">@color/alarmColorPrimary</item>
    </style>
    <style name="timerStyle" parent="AppThemeLight">
        <item name="colorPrimary">@color/timerColorPrimary</item>
        <item name="colorPrimaryDark">@color/timerColorPrimaryDark</item>
        <item name="colorAccent">@color/timerColorPrimary</item>

    </style>
</resources>
